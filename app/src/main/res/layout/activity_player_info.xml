<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_page"
    tools:context=".screens.PlayerInfoActivity">

    <Button
        android:id="@+id/btn_logout_playerinfo"
        android:layout_width="78dp"
        android:layout_height="94dp"
        android:layout_marginTop="272dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#3A4059"
        android:text="log out"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_main_logout3"
        android:layout_width="108dp"
        android:layout_height="61dp"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#3A4059"
        android:text="logout"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_edit_profile_playerinfo"
        android:layout_width="108dp"
        android:layout_height="61dp"
        android:layout_marginTop="508dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#3A4059"
        android:text="logout"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_logout3"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_level_playerInfo"
        android:layout_width="64dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207" />

    <TextView
        android:id="@+id/textView_money_playerInfo"
        android:layout_width="147dp"
        android:layout_height="66dp"
        android:gravity="center|right"
        android:text="money"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:id="@+id/textView_userName_playerInfo4"
        android:layout_width="40dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="c"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_money_playerInfo"
        app:layout_constraintEnd_toStartOf="@+id/textView_level_playerInfo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView_money_playerInfo"
        app:layout_constraintTop_toTopOf="@+id/textView_money_playerInfo"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_userName_playerInfo"
        android:layout_width="147dp"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="name"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

</androidx.constraintlayout.widget.ConstraintLayout>